<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/background">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THỐNG KÊ"
        android:textColor="@color/primary_text"
        android:fontFamily="@font/lato_bold"
        android:textSize="20dp"/>
    <RelativeLayout
        android:id="@+id/layout_tab_Statistical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:background="@drawable/neumorphism_button">
        <TextView
            android:id="@+id/tab_1_Statistical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thu nhập"
            android:textColor="@color/item"
            android:fontFamily="@font/lato_bold"
            android:layout_centerVertical="true"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/tab_2_Statistical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiêu"
            android:textColor="@color/secondary_text"
            android:fontFamily="@font/lato_bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/tab_3_Statistical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại chi tiêu"
            android:textColor="@color/secondary_text"
            android:fontFamily="@font/lato_bold"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textSize="14dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/frame_statistical"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="100dp">
        <RelativeLayout
            android:id="@+id/frame_statistical_income"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barchart_income_Statistical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/frame_statistical_spending"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barchart_spending_Statistical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/frame_statistical_target"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/piechart_spending_Statistical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_time_Statistical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginTop="420dp"
        android:paddingBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Thời gian"
                android:textColor="@color/primary_text"
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:fontFamily="@font/lato_bold"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="20dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/neumorphism_button">
                <TextView
                    android:id="@+id/time_now_Statistical"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="22/12/2022"
                    android:textColor="@color/primary_text"
                    android:gravity="center_vertical"
                    android:textSize="14dp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_marginTop="10dp"
            android:visibility="gone">
            <CalendarView
                android:id="@+id/cal_frame_time_2_Spending"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/neumorphism_button" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/layout_time_Statistical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu nhập trung bình"
                android:textSize="12dp"
                android:textColor="@color/secondary_text"
                android:fontFamily="@font/lato_bold"/>
            <TextView
                android:id="@+id/averageIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000000 VND"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/primary_text"
                android:textSize="18dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi tiêu trung bình"
                android:textSize="12dp"
                android:layout_gravity="right"
                android:textColor="@color/secondary_text"
                android:fontFamily="@font/lato_bold"/>
            <TextView
                android:id="@+id/averageSpending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000000 VND"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/primary_text"
                android:textSize="18dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mục tiêu tiết kiệm"
                android:textSize="12dp"
                android:textColor="@color/secondary_text"
                android:fontFamily="@font/lato_bold"/>
            <TextView
                android:id="@+id/target_saving_Statistical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 VND"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/primary_text"
                android:textSize="18dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="55dp"
            android:layout_alignParentEnd="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số tiền tiết kiệm"
                android:textSize="12dp"
                android:layout_gravity="right"
                android:textColor="@color/secondary_text"
                android:fontFamily="@font/lato_bold"/>
            <TextView
                android:id="@+id/money_saving_Statistical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 VND"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/primary_text"
                android:textSize="18dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>