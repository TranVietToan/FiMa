<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="15dp">
    <EditText
        android:id="@+id/edt_money_InputShortTarget"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:hint="Nhập sô tiền..."
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textSize="14dp"
        android:fontFamily="@font/lato_bold"
        android:textColorHint="@color/secondary_text"
        android:textColor="@color/primary_text"
        android:background="@drawable/neumorphism_edit_text"/>

    <Spinner
        android:id="@+id/sp_type_InputShortTarget"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/neumorphism_edit_text"
        android:paddingLeft="10dp" />

    <Spinner
        android:id="@+id/sp_topic_InputShortTarget"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/neumorphism_edit_text"
        android:paddingLeft="10dp" />
    <Button
        android:id="@+id/btn_confirm_InputShortTarget"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Xác nhận thông tin"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/lato_bold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/neumorphism_button_confirm"/>
</LinearLayout>