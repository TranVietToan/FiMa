<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/neumorphism_button">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/title_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:text="Title"
            android:textColor="@color/primary_text"
            android:textSize="16dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/content_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="2000000"
            android:textSize="16dp"
            android:fontFamily="@font/lato_bold"
            android:textStyle="bold"
            android:textColor="@color/item"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="15dp"
        android:paddingTop="3dp">
        <TextView
            android:id="@+id/time_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22/12/2022"
            android:textSize="14dp"
            android:fontFamily="@font/lato_bold"
            android:textStyle="bold"
            android:textColor="@color/secondary_text"/>
        <TextView
            android:id="@+id/type_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Tiền mặt"
            android:textSize="14dp"
            android:fontFamily="@font/lato_bold"
            android:textStyle="bold"
            android:textColor="@color/secondary_text"/>
    </RelativeLayout>
</LinearLayout>