<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="20dp">
    <RelativeLayout
        android:id="@+id/layout_update_money_Individual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/lato_bold"
            android:text="MỤC TIÊU"
            android:textColor="@color/primary_text"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/ib_add_data_ShortTarget"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_pencil"
                android:background="@drawable/neumorphism_fab_button" />
            <ImageButton
                android:id="@+id/ib_update_money_Target"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_menu_dots_vertical"
                android:background="@drawable/neumorphism_fab_button" />
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_statistical_Target"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/layout_update_money_Individual">
        <FrameLayout
            android:id="@+id/frame_statistical_1_Target"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/neumorphism_button"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp">
                <TextView
                    android:id="@+id/title_statistical_1_Target"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng tiền:"
                    android:textSize="16dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/secondary_text"
                    android:fontFamily="@font/lato_bold" />
                <TextView
                    android:id="@+id/content_statistical_1_Target"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10000000 VND"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/primary_text"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/frame_statistical_2_Target"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/neumorphism_button"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp">
                <TextView
                    android:id="@+id/title_statistical_2_Target"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiền mặt:"
                    android:textSize="16dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/secondary_text"
                    android:fontFamily="@font/lato_bold" />
                <TextView
                    android:id="@+id/content_statistical_2_Target"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20000000 VND"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/primary_text"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/frame_statistical_3_Target"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/neumorphism_button"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp">
                <TextView
                    android:id="@+id/title_statistical_3_Target"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tài khoản:"
                    android:textSize="16dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/secondary_text"
                    android:fontFamily="@font/lato_bold" />
                <TextView
                    android:id="@+id/content_statistical_3_Target"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30000000 VND"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/primary_text"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </FrameLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_long_term_goals_Individual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/layout_statistical_Target">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quỹ tiết kiệm năm "
            android:textSize="16dp"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/primary_text"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="30dp">
            <LinearLayout
                android:id="@+id/frame_add_target"
                android:layout_width="90dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:background="@drawable/neumorphism_cardview">
                <ImageButton
                    android:id="@+id/ib_add_data_LongTarget"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_add"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:background="@drawable/neumorphism_fab_button" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Thêm quỹ tiết kiệm"
                    android:fontFamily="@font/lato_bold"
                    android:textStyle="bold"
                    android:textColor="@color/secondary_text"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/frame_add_target">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_data_LongTarget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_short_term_goals_Individual"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_below="@id/layout_long_term_goals_Individual">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mục tiêu tài chính"
            android:textSize="16dp"
            android:textColor="@color/primary_text"
            android:fontFamily="@font/lato_bold"/>
        <ListView
            android:id="@+id/lv_data_ShortTarget"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:scrollbars="none"
            android:divider="@null"
            android:dividerHeight="8dp"/>
    </RelativeLayout>
</RelativeLayout>