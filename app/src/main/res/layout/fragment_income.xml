<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:padding="20dp">
    <RelativeLayout
        android:id="@+id/layout_add_income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/lato_bold"
            android:text="THU NHẬP"
            android:textColor="@color/primary_text"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/btn_add_data_Income"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:background="@drawable/neumorphism_fab_button"
            android:src="@drawable/ic_add" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_statistical_Income"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/layout_add_income">
        <FrameLayout
            android:id="@+id/frame_statistical_1_Income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/neumorphism_button"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp">
                <TextView
                    android:id="@+id/title_statistical_1_Income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng thu nhập:"
                    android:textSize="16dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/secondary_text"
                    android:fontFamily="@font/lato_bold" />
                <TextView
                    android:id="@+id/content_statistical_1_Income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10000000 VND"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/primary_text"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/frame_statistical_2_Income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/neumorphism_button"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp">
                <TextView
                    android:id="@+id/title_statistical_2_Income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiền mặt:"
                    android:textSize="16dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/secondary_text"
                    android:fontFamily="@font/lato_bold" />
                <TextView
                    android:id="@+id/content_statistical_2_Income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20000000 VND"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/primary_text"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/frame_statistical_3_Income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/neumorphism_button"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp">
                <TextView
                    android:id="@+id/title_statistical_3_Income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tài khoản:"
                    android:textSize="16dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/secondary_text"
                    android:fontFamily="@font/lato_bold" />
                <TextView
                    android:id="@+id/content_statistical_3_Income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30000000 VND"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato_bold"
                    android:textColor="@color/primary_text"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </FrameLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_find_type_Income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@id/layout_statistical_Income">
        <LinearLayout
            android:id="@+id/frame_find_type_1_Income"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="6dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:padding="22dp"
                android:gravity="center_vertical"
                android:background="@drawable/neumorphism_imageview"
                android:src="@drawable/ic_apps"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Thiết yếu"
                android:paddingTop="3dp"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="@color/secondary_text"
                android:fontFamily="@font/lato_bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/frame_find_type_2_Income"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="6dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:padding="22dp"
                android:background="@drawable/neumorphism_imageview"
                android:src="@drawable/ic_money_check"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Chuyển khoản"
                android:gravity="center"
                android:paddingTop="3dp"
                android:textSize="12dp"
                android:textColor="@color/secondary_text"
                android:fontFamily="@font/lato_bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/frame_find_type_3_Income"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="6dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:padding="22dp"
                android:background="@drawable/neumorphism_imageview"
                android:src="@drawable/ic_usd_circle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền mặt"
                android:paddingTop="3dp"
                android:textSize="12dp"
                android:layout_marginLeft="7dp"
                android:textColor="@color/secondary_text"
                android:fontFamily="@font/lato_bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/frame_find_type_4_Income"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="6dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:padding="22dp"
                android:background="@drawable/neumorphism_imageview"
                android:src="@drawable/ic_share"/>
            <TextView
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:text="Khác"
                android:paddingTop="3dp"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="@color/secondary_text"
                android:fontFamily="@font/lato_bold"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_time_Income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/layout_find_type_Income">
        <LinearLayout
            android:id="@+id/frame_time_1_Income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Thời gian"
                android:textColor="@color/primary_text"
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:fontFamily="@font/lato_bold"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="20dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/neumorphism_button">
                <TextView
                    android:id="@+id/time_now_Income"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="22/12/2022"
                    android:textColor="@color/primary_text"
                    android:gravity="center_vertical"
                    android:textSize="14dp"
                    android:fontFamily="@font/lato_bold"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/frame_time_2_Income"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:layout_below="@+id/frame_time_1_Income"
            android:visibility="gone">
            <CalendarView
                android:id="@+id/cal_frame_time_2_Income"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/neumorphism_button" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/layout_time_Income"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lv_data_Income"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:divider="@null"
            android:dividerHeight="8dp"/>
    </LinearLayout>
</RelativeLayout>